on boot

# USB Fastcharge
  chown system system /sys/kernel/fast_charge/force_fast_charge
  chmod 0660 /sys/kernel/fast_charge/force_fast_charge
  
# FPS Info permissions
  chown system graphics /sys/class/drm/sde-crtc-0/measured_fps
  chmod 0666 /sys/class/drm/sde-crtc-0/measured_fps

# KCAL permissions
  chown system system /sys/devices/platform/kcal_ctrl.0/kcal
  chown system system /sys/devices/platform/kcal_ctrl.0/kcal_enable
  chown system system /sys/devices/platform/kcal_ctrl.0/kcal_cont
  chown system system /sys/devices/platform/kcal_ctrl.0/kcal_sat
  chown system system /sys/devices/platform/kcal_ctrl.0/kcal_hue
  chown system system /sys/devices/platform/kcal_ctrl.0/kcal_min
  chown system system /sys/devices/platform/kcal_ctrl.0/kcal_val
  chmod 0660 /sys/devices/platform/kcal_ctrl.0/kcal
  chmod 0660 /sys/devices/platform/kcal_ctrl.0/kcal_enable
  chmod 0660 /sys/devices/platform/kcal_ctrl.0/kcal_cont
  chmod 0660 /sys/devices/platform/kcal_ctrl.0/kcal_sat
  chmod 0660 /sys/devices/platform/kcal_ctrl.0/kcal_hue
  chmod 0660 /sys/devices/platform/kcal_ctrl.0/kcal_min
  chmod 0660 /sys/devices/platform/kcal_ctrl.0/kcal_val

# Torch permissions
  chown system system /sys/devices/platform/soc/c440000.qcom,spmi/spmi-0/spmi0-05/c440000.qcom,spmi:qcom,pm6150l@5:qcom,leds@d300/leds/led:torch_0/max_brightness
  chown system system /sys/devices/platform/soc/c440000.qcom,spmi/spmi-0/spmi0-05/c440000.qcom,spmi:qcom,pm6150l@5:qcom,leds@d300/leds/led:torch_1/max_brightness
  chmod 0660 /sys/devices/platform/soc/c440000.qcom,spmi/spmi-0/spmi0-05/c440000.qcom,spmi:qcom,pm6150l@5:qcom,leds@d300/leds/led:torch_0/max_brightness
  chmod 0660 /sys/devices/platform/soc/c440000.qcom,spmi/spmi-0/spmi0-05/c440000.qcom,spmi:qcom,pm6150l@5:qcom,leds@d300/leds/led:torch_1/max_brightness

# Vibration
  chown system system /sys/class/leds/vibrator/vtg_level
  chmod 0660 /sys/class/leds/vibrator/vtg_level

# Battery Health
  chown system system /sys/class/power_supply/bms/charge_full
  chmod 0644 /sys/class/power_supply/bms/charge_full
  chown system system /sys/class/power_supply/bms/charge_full_design
  chmod 0644 /sys/class/power_supply/bms/charge_full_design
  chown system system /sys/class/power_supply/bms/cycle_count
  chmod 0644 /sys/class/power_supply/bms/cycle_count
  chown system system /sys/class/power_supply/bms/charge_counter
  chmod 0644 /sys/class/power_supply/bms/charge_counter
  chown system system /sys/class/power_supply/bms/battery_health
  chmod 0644 /sys/class/power_supply/bms/battery_health
  chown system system /sys/class/power_supply/bms/battery_type
  chmod 0644 /sys/class/power_supply/bms/battery_type

# SystemUI Info
  chown system system /sys/class/thermal/thermal_zone0/temp
  chown system system /sys/class/power_supply/battery/temp
  chmod 0664 /sys/class/thermal/thermal_zone0/temp
  chmod 0664 /sys/class/power_supply/battery/temp
